<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自定义 字体 TextView -->
    <declare-styleable name="FontTextView">

        <attr name="font_type" format="integer">
            <enum name="defaultFont" value="0" />
            <enum name="regular" value="1" />
            <enum name="helvetica" value="2" />
            <enum name="divination" value="3" />
        </attr>
        <attr name="font_bold" format="boolean" />
        <attr name="font_full" format="boolean" />
    </declare-styleable>

    <!--        TagFlowLayout      -->
    <declare-styleable name="TagFlowLayout">
        <attr name="auto_select_effect" format="boolean" />
        <attr name="max_select" format="integer" />
        <attr name="gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>



    <declare-styleable name="HeightView">
        <attr name="orientation" format="enum">
            <enum name="HORIZONTAL" value="1" />
            <enum name="VERTICAL" value="2" />
        </attr>
        <attr name="backgroundColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="highlightColor" format="color" />
        <attr name="markerColor" format="color" />
        <attr name="mlineColor" format="color" />
        <attr name="lineWidth" format="dimension" />
        <attr name="shortLine" format="dimension" />
        <attr name="longLine" format="dimension" />
        <attr name="highlightLineWidth" format="dimension" />
        <attr name="ratio" format="float" />
        <attr name="markerSpace" format="dimension" />
        <attr name="lines" format="integer" />
        <attr name="startLineValue" format="integer" />
        <attr name="markerSize" format="dimension" />
    </declare-styleable>


</resources>